<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <inset
            android:insetLeft="@dimen/inset_navigation_checked"
            android:insetRight="@dimen/inset_navigation_checked">
            <shape android:shape="rectangle">
                <solid android:color="@color/navigation_item_background_tint">
                </solid>
                <corners
                    android:radius="@dimen/radius_navigation_checked" />
            </shape>
        </inset>
    </item>
    <item>
        <color android:color="@color/transparent" />
    </item>
</selector>